{
  "name": "realworld-app",
  "version": "1.0.0",
  "author": "Vin√≠cius Vargas",
  "private": true,
  "engines": {
    "node": "18"
  },
  "scripts": {
    "format": "prettier --write .",
    "infra": "docker-compose up -d --wait && npm run migration:run --workspace packages/server && docker-compose logs -f",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "start:dev": "concurrently --kill-others \"npm run start:dev --workspace packages/server\" \"npm run start:dev --workspace packages/client\"",
    "start:watch": "concurrently --kill-others \"npm run start:watch --workspace packages/server\" \"npm run start:watch --workspace packages/client\""
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.0",
    "node": "^18.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.1",
    "typescript": "^5.0.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "printWidth": 120
  }
}
