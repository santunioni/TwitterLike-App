{
  "name": "@packages/server",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:lambda": "ncc build src/lambda.ts --minify --out build/lambda && cd build/lambda && zip -r ../../terraform/lambda.zip * && cd - && rm -rf build/lambda",
    "build:server": "ncc build src/server.ts --minify --out build/server",
    "build": "npm run build:lambda && npm run build:server",
    "build:server:start": "NODE_ENV=production node build/server/index.js",
    "start:dev": "NODE_ENV=development nest start",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "openapi": "ts-node src/nest/openapi.ts",
    "typeorm": "ts-node --compilerOptions '{\"emitDecoratorMetadata\":true,\"experimentalDecorators\":true,\"target\":\"es6\"}' --transpile-only $(which typeorm) --dataSource ./ormconfig.ts",
    "migration:run": "npm run typeorm migration:run",
    "migration:generate": "npm run typeorm migration:generate",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:show": "npm run typeorm migration:show",
    "migration:check": "npm run typeorm migration:generate migrations -- --check",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/common": "^9.3.12",
    "@nestjs/core": "^9.3.12",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/swagger": "^6.3.0",
    "@trpc/server": "^10.20.0",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1",
    "passport": "^0.6.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.15",
    "typeorm-naming-strategies": "^4.1.0",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.20.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@types/aws-lambda": "^8.10.114",
    "@types/aws-serverless-express": "^3.3.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/passport-http": "^0.3.9",
    "@types/passport-jwt": "^3.0.8",
    "lorem-ipsum": "^2.0.8",
    "swagger-ui-express": "^4.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".*\\.unit\\.ts$"
  }
}
