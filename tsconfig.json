{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "target": "es2017",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@packages/*": ["./packages/*"]
    }
  },
  "exclude": ["node_modules", "dist", "bin"]
}
