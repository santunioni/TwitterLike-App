{
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "paths": {
      "*": ["./node_modules/*"],
      "@packages/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
